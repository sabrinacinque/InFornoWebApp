@model InFornoWebApp.Models.Order

@{
    ViewData["Title"] = "Dettagli Ordine";
}

<h2>Dettagli Ordine</h2>

<div>
    <h4>Ordine #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data Ordine
        </dt>
        <dd class="col-sm-10">
            @Model.OrderDate
        </dd>
        <dt class="col-sm-2">
            Indirizzo di Spedizione
        </dt>
        <dd class="col-sm-10">
            @Model.ShippingAddress
        </dd>
        <dt class="col-sm-2">
            Note
        </dt>
        <dd class="col-sm-10">
            @Model.Notes
        </dd>
        <dt class="col-sm-2">
            Stato
        </dt>
        <dd class="col-sm-10">
            @(Model.IsCompleted ? "Completato" : "In Attesa")
        </dd>
        <dt class="col-sm-2">
            Prezzo Totale
        </dt>
        <dd class="col-sm-10">
            @Model.TotalPrice €
        </dd>
    </dl>
    <h4>Prodotti</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Quantità</th>
                <th>Prezzo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price €</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="OrderHistory" class="btn btn-primary">Indietro</a>
</div>
