@model IEnumerable<InFornoWebApp.Models.Order>

@{
    ViewData["Title"] = "Storico Ordini";
}

<h2>Storico Ordini</h2>

<table class="table">
    <thead>
        <tr>
            <th>Data Ordine</th>
            <th>Indirizzo di Spedizione</th>
            <th>Stato</th>
            <th>Prezzo Totale</th>
            <th>Dettagli</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate</td>
                <td>@order.ShippingAddress</td>
                <td>@(order.IsCompleted ? "Completato" : "In Attesa")</td>
                <td>@order.TotalPrice €</td>
                <td>
                    <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-info">Dettagli</a>
                </td>
            </tr>
        }
    </tbody>
</table>
